# Coinbase OnchainKit API Key
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# Base RPC URL (optional, defaults to public endpoint)
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# Base RPC URL for server-side operations (optional)
BASE_RPC_URL=https://mainnet.base.org

# Private key for server-side transactions (required for production)
PRIVATE_KEY=your_private_key_here

# Database URL (if using external database)
DATABASE_URL=your_database_url_here

# IPFS Configuration
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_API_ENDPOINT=https://api.pinata.cloud

# Arweave Configuration
ARWEAVE_GATEWAY=https://arweave.net/

# Farcaster Configuration
FARCASTER_HUB_RPC_URL=https://hoyt.farcaster.xyz:2281

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

